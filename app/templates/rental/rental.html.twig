{% extends 'base.html.twig' %}

{% block title %}My rentals {% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">My rental index</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>E-mail</th>
            <th>Comment</th>
        </tr>
        </thead>
        <tbody>
        {% for val in rental %}
            <tr>
                <td>{{ val.id }}</td>
                <td>{{ val.email }}</td>
                <td>{{ val.comment }}</td>
            </tr>
        {% else %}
            <tr>
                <td> {{ 'message.record_not_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}