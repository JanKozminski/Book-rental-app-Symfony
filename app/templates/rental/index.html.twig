{% extends 'base.html.twig' %}

{% block title %}Rental index{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">Rental index</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'all.id'|trans }}</th>
            <th>{{ 'rental.email'|trans }}</th>
            <th>{{ 'rental.comment'|trans }}</th>
            <th>{{ 'all.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for val in rental %}
            <tr>
                 <td>{{ val.id }}</td>
                <td>{{ val.email }}</td>
                <td>{{ val.comment }}</td>
                <td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('rental_show', {'id': val.id}) }}" class="btn btn-dark text-light btn-sm "><i class="fas fa-eye">Show</i></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td> {{ 'message.record_not_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}