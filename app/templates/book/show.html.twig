{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1 class="mt-4 mb-5">{{ book.title }}</h1>



    <div class="row">
        <div class="col-md-5">
            <img src="..."
                 srcset="https://covers.openlibrary.org/b/isbn/{{ book.isbn }}-L.jpg ,
                                        https://via.placeholder.com/150/150"
                 class="" alt="cover"

            >
        </div>
        <div class="col-md-7">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ book.id }}</td>
                </tr>
                <tr>
                    <th>Isbn</th>
                    <td>{{ book.isbn }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ book.title }}</td>
                </tr>
                <tr>
                    <th>Number of Pages</th>
                    <td>{{ book.pageNumber }}</td>
                </tr>
                <tr>
                    <th>Release date</th>
                    <td>{{ book.releaseDate ? book.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Rating</th>
                    <td>{{ book.rating }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ book.description }}</td>
                </tr>
                <tr>
                    <th>Authors</th>
                    <td>
                        {% for val in book.author %}
                            <a href="{{ path('author_show', {'id':val.id}) }}" class="badge bg-secondary">{{ val.name }}</a>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Categories</th>
                    <td>
                        {% for val in book.category %}
                            <a href="{{ path('category_show', {'id':val.id}) }}" class="badge rounded-pill bg-info text-dark">{{ val.name }}</a>
                        {% endfor %}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('book_index') }}" class="btn btn-primary mt-3 mb-3 btn-sm"> <i class="fas fa-arrow-alt-circle-left"></i> Back to list</a>

    {#% if app.user and 'ROLE_ADMIN' in app.user.roles %#}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-secondary mt-3 mb-3 btn-sm"> <i class="fas fa-edit"></i> Edit</a>

        {{ include('book/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}