{% extends 'base.html.twig' %}

{% block title %}{{ 'title.author_list'|trans }}{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">{{ 'title.author_list'|trans }}</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('author_new') }}" class="btn btn-primary mt-3 mb-3 btn-sm"><i class="fas fa-plus-circle"></i> Create new</a>
    {% endif %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'all.id'|trans }}</th>
            <th>{{ 'all.name'|trans }}</th>
            <th>{{ 'author.sex'|trans }}</th>
            <th>{{ 'author.date'|trans }}</th>
            <th>{{ 'author.country'|trans }}</th>
            <th>{{ 'all.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for val in author %}
            <tr>
                 <td>{{ val.id }}</td>
                <td>{{ val.name }}</td>
                <td>{{ val.sex }}</td>
                <td>{{ val.birthDate ? val.birthDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ val.countryOfOrigin }}</td>
                <td>
                    <a href="{{ path('author_show', {'id': val.id}) }}" class="btn btn-dark text-light btn-sm "><i class="fas fa-eye">show</i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('author_edit', {'id': val.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-edit">edit</i></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td> {{ 'message.record_not_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}