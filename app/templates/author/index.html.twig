{% extends 'base.html.twig' %}

{% block title %}Author index{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">Author index</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('author_new') }}" class="btn btn-primary mt-3 mb-3 btn-sm"><i class="fas fa-plus-circle"></i> Create new</a>
    {% endif %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Sex</th>
            <th>Date of birth</th>
            <th>Nationality</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for val in author %}
            <tr>
                <td>{{ val.id }}</td>
                <td>{{ val.name }}</td>
                <td>{{ val.sex }}</td>
                <td>{{ val.birth_date ? val.birth_date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ val.country_of_origin }}</td>
                <td>
                    <a href="{{ path('author_show', {'id': val.id}) }}" class="btn btn-dark text-light btn-sm "><i class="fas fa-eye"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('author_edit', {'id': val.id}) }}" class="btn btn-secondary btn-sm"><i class="fas fa-edit"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td> colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}